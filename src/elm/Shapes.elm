module Shapes exposing (..)

import Html
import Svg exposing (..)
import Svg.Attributes exposing (..)


type alias Shape msg =
    Html.Html msg


makeSvg : String -> String -> Html.Html msg
makeSvg shapePath color =
    svg
        [ version "1.1"
        , x "0"
        , y "0"
        , viewBox "0 0 174 200"
        ]
        [ Svg.path
            [ d shapePath
            , fill color
            ]
            [ g [ fillRule "evenodd" ] [] ]
        ]


