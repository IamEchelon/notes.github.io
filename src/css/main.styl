// Shape Key Panel Styles

.htmlKeys
    min-width: 43%
    max-width: 43%
    display: flex
    flex-direction: row
    flex-wrap: wrap-reverse
    align-content: center
    margin: auto
    padding-bottom: 220px
    margin-top: 30px

.htmlKeys .htmlNote:nth-child(12n + 7)
    margin-left: 77px

.htmlKeys .htmlNote:nth-child(12n + 1)
    margin-right: 0px


.htmlNote
    cursor: pointer
    width: 150px
    // margin-bottom: -46px
    margin: -22.5px $half-x-spacing() 
    transition: all 100ms ease-in;
    transform: scale(1)
    animation: bounce 1s infinite alternate;

