$panelColor = #D8D8D8

.notesBody
    

.instrument
    position: relative


.htmlKeys
    display: block
    margin: auto
    width: 80%
    padding-bottom: 200px
    background: white


.flexcontainer
    display: flex
    flex-direction: row
    flex-wrap: wrap-reverse
    margin: auto
   


.htmlNote
    margin: 20px 10px
    cursor: pointer
    height: 150px
    width: 150px


.panel
    background: $panelColor
    display: block
    height: 10%
    position: fixed
    bottom: 0
    right: 0
    left: 0


.selectSynth
    margin: auto
    width: 80%
    // position absolute
    // bottom: 0

.modal
    display: flex
    justify-content: center
    align-items: center
    background-color: black
    opacity: .6
    position: absolute !important
    top: 0 !important
    left: 0 !important
    height: 100vh
    width: 100vw
    z-index: 100
    text-align: center
    overflow-y: noscroll

#playButton
    font-weight: bold
    font-family: helvetica
    background-color: transparent !important
    color: white
    display: inline
    font-size: 1em
    padding: 10px 15px
    border: 5px solid white
    letter-spacing: 1px

.hide
    display: none

