// Constants

$panelColor = #D8D8D8

$width = 150px
$xspacing = 3.5px
$spacer = ($width / 2) + ($xspacing)

// geometry for hexagon height
$cap_geometry = tan(30deg)px

// height for top of hexagon
$margin_height = (($width / 2) * $cap_geometry) / 2

// Spacing between hexagons on x axis
$half-x-spacing = ( $xspacing / 2)px

// Lower half spacing but seems off
// $yspacing = $half-x-spacing * math(3, "sqrt")px


// Shape Key Panel Styles

.htmlKeys
    min-width: 43%
    max-width: 43%
    display: flex
    flex-direction: row
    flex-wrap: wrap-reverse
    align-content: center
    margin: auto
    padding-bottom: 220px
    margin-top: 30px

.htmlKeys .htmlNote:nth-child(12n + 7)
    margin-left: $spacer


.htmlNote
    cursor: pointer
    width: $width
    margin: -($margin_height) $half-x-spacing
    // margin-left: $half-x-spacing 
    transition: all 100ms ease-in;
    transform: scale(1)
    animation: bounce 1s infinite alternate;

.keydown
    transition: all 100ms ease-in;
    transform: scale(.80)



// Transpot Panel Styles

.panel
    background: $panelColor
    display: flex
    height: 10%
    position: fixed
    bottom: 0
    right: 0
    left: 0
    padding: 20px
    align-content: left
    justify-content: left


.selectSynth
    margin: auto
    text-align: center
    select
        text-align: center
        padding: 5px 8px;
        padding-left: 15px
        width: 200px
        border-radius: 0
        border: none
        box-shadow: none;
        background: white
        background-image: none;
        -webkit-appearance: none;
        border-left: 5px solid grey
  
    select:focus
        outline: none



// Modal Styles

.modal
    display: flex
    justify-content: center
    align-items: center
    background-color: black
    opacity: .6
    position: absolute 
    top: 0
    left: 0
    height: 100vh
    width: 100vw
    z-index: 100
    text-align: center
    

#playButton
    font-weight: bold
    font-family: helvetica
    background-color: transparent
    color: white
    display: inline
    font-size: 1em
    padding: 10px 15px
    border: 5px solid white
    letter-spacing: 1px

.hide
    display: none



